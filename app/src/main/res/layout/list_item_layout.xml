<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal"
    android:padding="10dp"
    app:layout_constraintTop_toBottomOf="@+id/frameLayout"
    tools:ignore="MissingConstraints"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/sss"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutCompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sss"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/minimize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minimize on draw"
            android:textColor="#EFEBEB"
            android:textColorHint="#EBFFFFFF"
            android:textSize="17sp"
            android:textStyle="normal|bold"

            />

        <TextView
            android:id="@+id/descript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            android:singleLine="false"
            android:text="Minimize application when draw start"
            android:textColor="#EFEBEB"
            android:textColorHint="#EBFFFFFF"
            android:textSize="12dp"

            />

    </LinearLayout>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#EFE6E6"
        android:textColorHint="#D3C5C5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
